<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.sun.corba</groupId>
    <artifactId>glassfish-corba</artifactId>
    <name>GlassFish Corba</name>
    <version>4.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <developers>
        <developer>
            <name>Harshad Vilekar</name>
            <email>harshad.vilekar@oracle.com</email>
            <id>hvilekar</id>
        </developer>
        <developer>
            <name>Russell Gold</name>
            <email>russell.gold@oracle.com</email>
            <id>russgold</id>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>CDDL+GPL</name>
            <url>https://glassfish.java.net/public/CDDL+GPL.html</url>
        </license>
    </licenses>

    <issueManagement>
        <system>JIRA</system>
        <url>http://java.net/jira/browse/GLASSFISH_CORBA</url>
    </issueManagement>

    <mailingLists>
        <mailingList>
            <name>CORBA Developer</name>
            <post>dev@glassfish-corba.java.net</post>
            <archive>http://java.net/projects/glassfish-corba/lists/dev/archive</archive>
        </mailingList>
    </mailingLists>

    <modules>
        <module>idlj</module>
        <module>idlj-maven-plugin</module>
        <module>omgapi</module>
        <module>csiv2-idl</module>
        <module>exception-annotation-processor</module>
        <module>orbmain</module>
    </modules>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>idlj-maven-plugin</artifactId>
                <version>1.2-SNAPSHOT</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <sources>
                        <source>
                            <defines>
                                <define>
                                    <symbol>CORBA3</symbol>
                                </define>
                            </defines>
                            <additionalArguments>
                                <additionalArgument>-corba</additionalArgument>
                                <additionalArgument>3.0</additionalArgument>
                            </additionalArguments>
                        </source>
                    </sources>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <sonar.dynamicAnalysis>false</sonar.dynamicAnalysis>
        <maven-bundle-plugin-version>2.3.7</maven-bundle-plugin-version>
        <pfl-version>3.2.0-b001</pfl-version>
    </properties>

    <profiles>
        <profile>
            <id>all-tests</id>
            <modules>
                <module>functional-tests</module>
            </modules>
        </profile>
        <profile>
            <id>release</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>attach-sources</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>attach-javadoc</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>

