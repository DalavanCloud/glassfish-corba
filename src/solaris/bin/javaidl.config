set XX=`pwd`
setenv RELEASEDIR $XX:h
echo $RELEASEDIR
# ------------------------------------------------------
# SET JAVA_HOME HERE
# ------------------------------------------------------

if ( $JAVA_HOME == "" ) then
    setenv JAVA_HOME /usr/local/java/jdk1.1.6/solaris
endif

if ( $JAVAIDL_HOME == "" ) then
    setenv JAVAIDL_HOME "~/JavaIDLHome"
endif

# ------------------------------------------------------
# SET ANY JAVA IDL PROPERTIES HERE
# 
#  o com.sun.corba.se.JavaIDLHome    (required)
#  o com.sun.corba.se.impl.activation.DbDir     (default $JAVAIDL_HOME/orb.db)
#  o org.omg.CORBA.ORBInitialPort (default 900)
#  o com.sun.corba.se.impl.activation.Port      (default 1049)
# 
# ------------------------------------------------------

setenv VM_PROPS -Dcom.sun.corba.se.JavaIDLHome=$JAVAIDL_HOME 
setenv VM_PROPS "${VM_PROPS} -Dcom.sun.corba.se.impl.activation.DbDir=$JAVAIDL_HOME/orb.db"
setenv VM_PROPS "${VM_PROPS} -Dorg.omg.CORBA.ORBInitialPort=1050"
setenv VM_PROPS "${VM_PROPS} -Dcom.sun.corba.se.impl.activation.Port=1049"
setenv VM_PROPS "${VM_PROPS} -Dioser=${RELEASEDIR}/bin/libioser.so"

# ------------------------------------------------------
# SET THE CLASSPATH HERE
# ------------------------------------------------------

setenv CLASSPATH $JAVA_HOME/lib/classes.zip
setenv CLASSPATH ${CLASSPATH}:${RELEASEDIR}/lib/iioprt.jar
setenv CLASSPATH ${CLASSPATH}:${RELEASEDIR}/lib/rmiorb.jar
setenv CLASSPATH ${CLASSPATH}:${RELEASEDIR}/lib/iioptools.jar

setenv JAVA_CMD "$JAVA_HOME/bin/java $VM_PROPS -classpath $CLASSPATH"
setenv JDB_CMD "$JAVA_HOME/bin/jdb $VM_PROPS -classpath $CLASSPATH"
