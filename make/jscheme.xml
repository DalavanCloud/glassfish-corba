<!-- Checks to see if the generated file for the jscheme script invocation exists
     and if it does exist then has the jscheme script been changed in reference to 
     the generated files  -->
<target name="check-minorcode-file-changed">
    <basename property="only-file-name" suffix=".mc" file="${minorcode-file-name}"/>
    <condition property="minorcode-file-changed">
	<or>
	    <not>
		<available file="${output.dir}/${only-file-name}SystemException.java"/>
	    </not>
	    <not>
		<available file="${output.dir}/${only-file-name}SystemException.resource"/>
	    </not>
	    <uptodate property="minorcode-file-changed" targetfile="${minorcode-file-name}">
		<srcfiles dir="${output.dir}" includes="${only-file-name}SystemException.*"/>
	    </uptodate>
	</or>
    </condition>
</target>

<condition property="jscheme-not-available">
    <not>
        <available file="jscheme/lib/jscheme.jar"/>
    </not>
</condition>

<macrodef name="run-jscheme">
    <attribute name="command"/>
    <sequential>
        <java classname="jscheme.REPL" classpath="jscheme/src" fork="true" dir="${root.dir}/jscheme">
            <arg value="bld/make.scm"/>
            <arg value="-main"/>
            <arg value="commandMain"/>
            <arg value="@{command}"/>
        </java>
    </sequential>
</macrodef>

<target name="build-jscheme" depends="init" if="jscheme-not-available">
    <mkdir dir="${root.dir}/jscheme/lib"/>
    <javac sourcepath="" destdir="jscheme/src" srcdir="jscheme/src" classpath="jscheme/src">
        <include name="jscheme/REPL.java"/>
    </javac>
    <run-jscheme command="-all"/>
</target>

<target name="clean-jscheme" depends="init">
    <run-jscheme command="-clean"/>
    <delete dir="jscheme/lib"/>
</target>

<!-- This target is called repeatedly for each jscheme invocation -->
<target name="call-jscheme" depends="check-minorcode-file-changed" if="minorcode-file-changed">
    <echo message="Running jscheme on ${only-file-name}.mc"/>
    <java classname="jscheme.REPL" classpathref="classpath.master" fork="true">
	<classpath>
	    <pathelement location="${jscheme-jar}"/>
	    <pathelement location="${jschemelogutil-jar}"/>
	</classpath>
	<arg value="${jscheme-script-name}"/>
	<arg line="-main main"/>
	<arg value="make-class"/>
	<arg value="${minorcode-file-name}"/>
	<arg value="${output.dir}"/>
    </java>
    <java classname="jscheme.REPL" classpathref="classpath.master" fork="true">
	<classpath>
	    <pathelement location="${jscheme-jar}"/>
	    <pathelement location="${jschemelogutil-jar}"/>
	</classpath>
	<arg value="${jscheme-script-name}"/>
	<arg line="-main main"/>
	<arg value="make-resource"/>
	<arg value="${minorcode-file-name}"/>
	<arg value="${output.dir}"/>
    </java>
</target>

<!-- This target runs all the jscheme invocations -->
<target name="run-all-jscheme" depends="init">
    <mkdir dir="${gensrc.dir}/com/sun/corba/se/impl/logging"/>
    <property name="logging-spi-src.dir" value="${src.dir}/com/sun/corba/se/spi/logging"/>
    <property name="jscheme.output.dir" value="${gensrc.dir}/com/sun/corba/se/impl/logging"/>
    <property name="jscheme-script-name" value="${src.dir}/com/sun/tools/corba/se/logutil/scripts/mc.scm"/>
    <java classname="jscheme.REPL" classpathref="classpath.master" fork="true">
	<classpath>
	    <pathelement location="${jscheme-jar}"/>
	    <pathelement location="${jschemelogutil-jar}"/>
	</classpath>
	<arg value="${jscheme-script-name}"/>
	<arg line="-main main"/>
	<arg value="make-CORBALogDomains-classes"/>
	<arg value="${logging-spi-src.dir}/data/LogDomains.mcd"/>
	<arg value="${jscheme.output.dir}"/>
    </java>
    <antcall target="call-jscheme" inheritAll="true" inheritRefs="true">
	<param name="minorcode-file-name" value="${logging-spi-src.dir}/data/Activation.mc"/>
	<param name="output.dir" value="${jscheme.output.dir}"/>
    </antcall>
    <antcall target="call-jscheme" inheritAll="true" inheritRefs="true">
	<param name="minorcode-file-name" value="${logging-spi-src.dir}/data/IOR.mc"/>
	<param name="output.dir" value="${jscheme.output.dir}"/>
    </antcall>
    <antcall target="call-jscheme" inheritAll="true" inheritRefs="true">
	<param name="minorcode-file-name" value="${logging-spi-src.dir}/data/Interceptors.mc"/>
	<param name="output.dir" value="${jscheme.output.dir}"/>
    </antcall>
    <antcall target="call-jscheme" inheritAll="true" inheritRefs="true">
	<param name="minorcode-file-name" value="${logging-spi-src.dir}/data/Naming.mc"/>
	<param name="output.dir" value="${jscheme.output.dir}"/>
    </antcall>
    <antcall target="call-jscheme" inheritAll="true" inheritRefs="true">
	<param name="minorcode-file-name" value="${logging-spi-src.dir}/data/OMG.mc"/>
	<param name="output.dir" value="${jscheme.output.dir}"/>
    </antcall>
    <antcall target="call-jscheme" inheritAll="true" inheritRefs="true">
	<param name="minorcode-file-name" value="${logging-spi-src.dir}/data/ORBUtil.mc"/>
	<param name="output.dir" value="${jscheme.output.dir}"/>
    </antcall>
    <antcall target="call-jscheme" inheritAll="true" inheritRefs="true">
	<param name="minorcode-file-name" value="${logging-spi-src.dir}/data/POA.mc"/>
	<param name="output.dir" value="${jscheme.output.dir}"/>
    </antcall>
    <antcall target="call-jscheme" inheritAll="true" inheritRefs="true">
	<param name="minorcode-file-name" value="${logging-spi-src.dir}/data/Util.mc"/>
	<param name="output.dir" value="${jscheme.output.dir}"/>
    </antcall>
    <!-- Create the LogStrings.properties file from concatenating all
	 the *.resource files -->
    <echo message="Concatenating resource files to create LogStrings.properties"/>
    <concat destfile="${jscheme.output.dir}/LogStrings.properties">
	<fileset dir="${jscheme.output.dir}" includes="*.resource"/>
    </concat>
</target>
