<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.sun.corba</groupId>
    <artifactId>glassfish-corba-orb</artifactId>
    <name>GlassFish Corba ORB</name>
    <version>4.0-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <parent>
        <groupId>com.sun.corba</groupId>
        <artifactId>glassfish-corba</artifactId>
        <version>4.0-SNAPSHOT</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>com.sun.corba</groupId>
            <artifactId>glassfish-corba-csiv2-idl</artifactId>
            <version>4.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.sun.corba</groupId>
            <artifactId>glassfish-corba-omgapi</artifactId>
            <version>4.0-SNAPSHOT</version>
        </dependency>
        <dependency>
          <groupId>org.glassfish.pfl</groupId>
          <artifactId>pfl-basic</artifactId>
          <version>3.2.0-b001</version>
        </dependency>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>1.2.0</version>
        </dependency>
        <dependency>
          <groupId>org.glassfish.pfl</groupId>
          <artifactId>pfl-dynamic</artifactId>
          <version>3.2.0-b001</version>
        </dependency>
        <dependency>
          <groupId>org.glassfish.gmbal</groupId>
          <artifactId>gmbal</artifactId>
          <version>3.2.0-b003</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>com.sun.corba.ee.*,com.sun.org.omg.*</Export-Package>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>idlj-maven-plugin</artifactId>
                <configuration>
                    <sources>
                        <source>
                            <packagePrefixes>
                                <packagePrefix><type>activation</type>    <prefix>com.sun.corba.ee.spi</prefix></packagePrefix>
                            </packagePrefixes>
                            <additionalArguments>
                                <additionalArgument>-corba</additionalArgument>
                                <additionalArgument>3.0</additionalArgument>
                                <additionalArgument>-pkgTranslate</additionalArgument>
                                <additionalArgument>IOP</additionalArgument>
                                <additionalArgument>org.omg.IOP</additionalArgument>
                            </additionalArguments>
                        </source>
                    </sources>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
